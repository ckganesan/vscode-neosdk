{
	"name": "vscode-neosdk",
	"author": {
		"name": "Ganesan Karuppasamy",
		"email": "kbganesan87@gmail.com",
		"url": "https://github.com/ckganesan"
	},
	"displayName": "Neo Java Web SDK",
	"description": "Debug or run your java war package in Neo Java Web SDK",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Programming Languages",
		"Extension Packs",
		"Debuggers",
		"Other"
	],
	"keywords": [
		"Neo Java Web SDK",
		"Java",
		"Tomcat",
		"Server"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/ckganesan/vscode-neosdk"
	},
	"bugs": {
		"url": "https://github.com/ckganesan/vscode-neosdk/issues",
		"email": "kbganesan87@gmail.com"
	},
	"files": [],
	"license": "https://github.com/ckganesan/vscode-neosdk/blob/master/LICENSE.txt",
	"homepage": "https://github.com/ckganesan/vscode-neosdk/blob/master/README.md",
	"activationEvents": [
		"onCommand:extension.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "tomcat.tree.refresh",
				"title": "Refresh Tomcat Server Tree",
				"category": "Tomcat",
				"icon": "plus"
			},
			{
				"command": "tomcat.server.add",
				"title": "Add Tomcat Server",
				"category": "Tomcat",
				"icon": ""
			}		
		],
		"views": {
			"explorer": [
				{
					"id": "neoJavaTomcatServer",
					"name": "Neo Java Tomcat Servers"
				}
			]
		},
		"menus": {
			"view/title": [
			],
			"commandPalette": [
			],
			"explorer/context": [
			],
			"view/item/context": [
			]
		},
		"configuration": [
			{
				"title": "Neo Java Web SDK",
				"properties": {
					"neosdk.location": {
						"type": "string",
						"default": "",
						"description": "The location of Neo Java Web SDK"
					} 
				}
			},
			{
				"title": "Java Web Tomcat",
				"properties": {
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.43.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}
